<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<h2>Repos</h2>

<ul class="list-group">
  <% current_user.repos.each do |repo| %>
    <li class="list-group-item">
    <%= link_to repo.full_name, repository_path(:login => repo.owner.login, :repo => repo.name) %>
    <br/>
    <small><%= repo.description %></small>
    </li>
  <% end %>
</ul>
